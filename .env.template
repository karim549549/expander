# .env.template â€” copy to .env.local and fill with real secrets

# App
APP_PORT=3000
APP_HOST=0.0.0.0

# MySQL (TypeORM)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=change_me
MYSQL_DATABASE=expander_db
MYSQL_SYNCHRONIZE=false

# Optional: single DATABASE_URL for hosted providers (Railway/Postgres-like URL)
# If provided, application should prefer this over individual MYSQL_* values.
DATABASE_URL=mysql://root:change_me@localhost:3306/expander_db

# MongoDB (Mongoose)
MONGO_URI=mongodb://localhost:27017/expander_mongo
# If you use MongoDB Atlas, put the Atlas connection string here (recommended for production)
# Example: mongodb+srv://<user>:<password>@cluster0.abcd.mongodb.net/expander_mongo?retryWrites=true&w=majority
MONGO_ATLAS_URI=

# Toggle to use local docker DBs or remote providers (Atlas/Railway)
USE_LOCAL_DBS=true

# JWT
JWT_ACCESS_TOKEN_SECRET=replace_access_secret
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_SECRET=replace_refresh_secret
JWT_REFRESH_TOKEN_EXPIRATION=7d

# Email (SMTP) - configure for real SMTP provider or use mock
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# Scheduler / Redis (optional for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Environment
NODE_ENV=development

# Add any other service keys below
